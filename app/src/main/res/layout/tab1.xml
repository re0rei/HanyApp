<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/listbackground1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="놓치면 후회할 지역 대표 메뉴"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여행중 먹어봐야 할 대표 메뉴와 메뉴별 맛집 추천" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="제대로 즐기는 맛집 사용 설명서"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맛집 소개와 놓치지 말아야 할 먹방 리스트" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="맛부터 비쥬얼 까지 책임지는 음식점"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역별로 엄선한 요즘 핫한 가게 리스트 모음" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="가성비 갑의 저렴한 맛집"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해당여행지역에서 먹어봐야 할 대표 메뉴와 메뉴별 맛집 추천" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="여행 지역 먹거리 번외편"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여기까지 정복하면 당신은 진정한 미식가" />

                </TableRow>



            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>