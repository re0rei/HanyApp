<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginBottom="600dp"
        android:background="#5ebfb8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="179dp"
            android:layout_marginStart="11dp"
            android:text="부산,"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_alignTop="@+id/textView"
            android:layout_marginTop="30dp"
            android:text="언제 떠나세요?"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/guide_button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon1" />

        <view
            class="android.support.v7.widget.ActionMenuView"
            id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@+id/guide_button2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:background="#49a096"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.908"
            tools:ignore="DuplicateIds,NotSibling"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/view" />

        <Button
            android:id="@+id/tour2_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/guide_button2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/guide_button2"
            android:background="@drawable/icon2" />

        <Button
            android:id="@+id/weather_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/guide_button2"
            android:layout_marginEnd="108dp"
            android:background="@drawable/icon3" />

        <Button
            android:id="@+id/food_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/guide_button2"
            android:layout_marginEnd="19dp"
            android:background="@drawable/icon4" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:background="#e2dfdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:text="자세히"
                    android:textColor="#49a096" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="193dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="21dp"
                    android:text="부산의 6월 날씨"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="233dp"
                    android:layout_height="71dp"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:text="서서히 더워지고 있지만,\n일교차가 크니 감기조심하세요."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView7"
                    android:background="@drawable/sunny" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:text="자세히"
                    android:textColor="#49a096" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="22dp"
                    android:text="부산여행, 어디서 먹을까?"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="330dp"
                    android:layout_height="51dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_marginTop="74dp"
                    android:textSize="18sp"
                    android:text="부산에서 먹어봐야 할 대표 메뉴와 맛집 추천" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:text="자세히"
                    android:textColor="#49a096" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:text="부산 필수 여행 코스, 해안배경"
                    android:layout_marginLeft="25dp"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_marginTop="69dp"
                    android:text="해안풍경, 바다를 바라보며 먹는 맛집 리스트 추천"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

