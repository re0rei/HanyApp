<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/listbackground2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="여행지역 명소 베스트10"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해당지역에 왔다면 반드시 가봐야할 대표 명소 모아보기" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="여행지역 이색 체험"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="먹교 쇼핑만 할 순 없다. 해당지역의 특별한 분위기를 느끼자" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="취향별로 고르는 대표 쇼핑 스팟"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취향별로 선택하자, 어디든 후회 없다" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="해당지역으로 떠나는 명소 여행"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="축제시기부터 지역별 베스트 명소까지" />

                </TableRow>


                <view
                    class="android.support.v7.widget.ActionMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:background="@android:color/black"

                    app:layout_constraintVertical_bias="0.908"
                    tools:ignore="DuplicateIds,NotSibling" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="해당지역 백배 즐기기"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="교통편, 인기장소, 베스트 코스 등 총정리" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>